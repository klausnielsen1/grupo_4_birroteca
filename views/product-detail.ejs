    <%- include('./partials/head') %>
<body>


    <%- include('./partials/header') %>

    <section>
        <div class="img-btns">
                
                <div class="name-like">

                    <div class="container-name-product">
                        <h3 class="name-product"><%= product.nombre %> </h3>
